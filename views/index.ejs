    <script src="/vendor/jquery-3.0.0.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.2/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.2/jquery.modal.min.css" />
  <script defer src="/scripts/index.js"></script>
</head>

<body>
<!-- nav bar fixed at top -->
<header class="page-header">
  <nav>
    <span>
      <span id="logo">
        BIKE + SELL
      </span>
      <form>
        <input type="search" id="min-price" name="min-price" placeholder="minimum price">
        <input type="search" id="max-price" name="max-price" placeholder="maximum price">
        <button class="search-button"><i class="fa-solid fa-arrow-right"></i></button>
      </form>
    </span>

    <span>
      <span>Hello, user!</span>
      <button class="post-bike">Post Bike</button>
    </span>
  </nav>

    <!-- toggle for all bikes / favourites / my lisitngs-->
  <div class="toggle-bar">
    <button class="all-listings">All Bikes</button>
    <button class="my-listings">My Listings</button>
    <button class="favourites">Favourites</button>
  </div>

</header>

<!-- <img src="/public/test_images/bike_header.jpg" alt="grainy film photo of a bike loaded up for bikecamping"> -->
<main>
  <form>
      <div class="dropdown-form" style= "display: none;">

        <h2>SELL YOUR BIKE</h2>

      <!-- bike title, price, city, size and type -->
      <section class="bike-details">

        <div class="form-inputs">
          <input placeholder="Title" type="text" id="new-listing_title">
          <input placeholder="Price" type="text" name="Price" id="new-listing_price">
          <input placeholder="City" type="text" name="City" id="new-listing_city">
        </div>

        <div class="form-selects">
          <select id="new-listing_size">
            <option value>Size</option>
            <option value="xs">XS</option>
            <option value="s">S</option>
            <option value="m">M</option>
            <option value="l">L</option>
            <option value="xl">XL</option>
          </select>

          <select id="new-listing_type">
            <option value>Type</option>
            <option value="road">Road</option>
            <option value="mountain">Mountain</option>
            <option value="Hybrid/Commuter">Hybrid/Commuter</option>
            <option value="Gravel">Gravel</option>
            <option value="ebike">E-Bike</option>
          </select>
          <input placeholder="Image URL" type="text" class="post-image">
        </div>
      </section>

      <!-- bike description -->
      <textarea id="new-listing_description" name="Description" placeholder="Description"></textarea>
      <div>
        <button type="submit" class="post-button">Post Bike</button>
      </div>

    </div>
  </form>

  </div>





  <!-- container for listings-->
  <div class="listing-container"></div>


</main>

<!-- pop up to message seller -->
<div id="message-popup" class="modal">
  <h3>Interested? Message the seller:</h3>
  <form id="message-form">
    <input class="user-cell" type="tel" placeholder="(123) 456-7890" name="user-cell" pattern="/^\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$/" required>
    <textarea class="user-message" name="user-message" placeholder="Hey! I'm interesed in your sick ride!" required></textarea>
    <button class='send-message' type="submit">Send message!</button>
  </form>
</div>

<div id="message-sent" class="modal">
  <p>Your message has been sent!</p>
  <button class="popup-close">OK!</button>
</div>

<div id="message-error" class="modal">
  <p>Something went wrong</p>
  <button class="popup-close">Go Back!</button>
</div>
</body>

</html>
