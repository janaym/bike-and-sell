<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bike & Sell - Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- external js -->


  <!-- stylesheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css"/>
  <link rel="stylesheet" href="/styles/header.css"/>
  <link rel="stylesheet" href="/styles/listing-container.css"/>
  <link rel="stylesheet" href="/styles/toggle-bar.css"/>


  <!-- import external fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,300&family=Playfair+Display&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/index.js"></script>
</head>

<body>
<!-- nav bar fixed at top -->
<header class="page-header">
  <nav>
    <span>
      <span id="logo">
        BIKE + SELL
      </span>
      <form>
        <input type="search" id="main-search" name="main-search" placeholder="n+1 awaits">
        <button>go!</button>
      </form>
    </span>

    <span>
      <span>Hello, user!</span>
      <button class="post-bike">Post Bike</button>
    </span>
  </nav>

</header>

<!-- <img src="/public/test_images/bike_header.jpg" alt="grainy film photo of a bike loaded up for bikecamping"> -->
<main>

      <div class="dropdown-form" style= "display: none;">

      <section class="bike-details">

        <input placeholder="Title" type="text" id="new-listing_title">

        <input placeholder="Price" type="text" name="Price" id="new-listing_price">

        <select id="new-listing_size">
          <option value>Size</option>
          <option value="xs">XS</option>
          <option value="s">S</option>
          <option value="m">M</option>
          <option value="l">L</option>
          <option value="xl">XL</option>
        </select>

        <select id="new-listing_type">
          <option value>Type</option>
          <option value="road">Road</option>
          <option value="mountain">Mountain</option>
          <option value="Hybrid/Commuter">Hybrid/Commuter</option>
          <option value="Gravel">Gravel</option>
          <option value="ebike">E-Bike</option>
        </select>

        <input placeholder="City" type="text" name="City" id="new-listing_city">


      </section>

      <input placeholder="Description" type="text" name="Description" id="new-listing_description">



      <div id="buttons">
        <button type="submit">Add image</button>
        <button type="submit">Post</button>
      </div>

    </div>
  </form>

  </div>
  <!-- toggle for all bikes / favourites / my lisitngs-->
  <div class="toggle-bar">
    <button class="all-listings">All Bikes</button>
    <button class="my-listings">My Listings</button>
    <button class="favourites">Favourites</button>
  </div>


  <!-- container for listings-->
  <div class="listing-container"></div>
</main>

</body>

</html>
