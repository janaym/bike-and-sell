<!DOCTYPE html>
<html lang="en">

<head>
  <title>Post Ad</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/new_listing.js"></script>
</head>

<body>

  <form action="" method="post" id="new-listing">

    <header class="new-listing_header">
      <span>LOGO</span>
      <button>Close</button>
    </header>

    <div class="new-listing-form_field-wrapper">

      <input placeholder="Title" type=>

      <section class="new-listing_filters">
        <input placeholder="Price" type="text" name="Price" id="new-listing_price">
        <select class="new-listing_size">
          <option value>Size</option>
          <option value="xs">XS</option>
          <option value="s">S</option>
          <option value="m">M</option>
          <option value="l">L</option>
          <option value="xl">XL</option>
        </select>
        <select class="new-listing_type">
          <option value>Type</option>
          <option value="road">Road</option>
          <option value="mountain">Mountain</option>
          <option value="Hybrid/Commuter">M</option>
          <option value="Gravel">Gravel</option>
          <option value="ebike">E-Bike</option>
        </select>
      </section>

      <div id="new-listing_description">
        <input placeholder="Description" type="text" name="Description">
      </div>

      <div id="new-listing_city">
      <input placeholder="City" type="text" name="City">
      </div>

      <div id="new-listing_addImage">
        <button>Add image</button>
      </div>

      <div id="new-listing_submitPost">
        <button>Post</button>
      </div>

    </div>
  </form>

</body>
</html>
